    <div class="container">
        <form action="/team" method="post">
            <div class="col-md-6">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Join</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (var i = 0;i < user_list.length;i++){ %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= user_list[i] %></td>
                            <td><input type="checkbox" name="user_list" value="<%= user_list[i] %>"></td>
                        </tr>
                    <% } %>
                        <tr>
                            <td><%= user_list.length + 1 %></td>
                            <td><input type="text" name="new_user"></td>
                            <td><button type="button" class="btn btn-sm btn-default">추가</button></td>
                        </tr>
                    </tbody>
                </table>
                <input type="text" name="num" placeholder="Team Number">
                <input type="submit" class="btn btn-lg btn-default" value="Create">
            </div>

        </form>
    </div>

     
